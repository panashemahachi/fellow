<!DOCTYPE html>
<html>
<head>
  <title>fellow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="progress" style="margin-bottom:0px;margin-top:-50px;">
  <div class="progress-bar" style="width:100%;"></div>
</div>
      <nav class="navbar navbar-default" role="navigation">
        <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-brand-centered">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="navbar-brand navbar-brand-centered">
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              <%= image_tag('logo.png', class: 'img-responsive')%>
              <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Edit Your Profile", edit_user_registration_path%></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
              </ul>
              </li></div>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-brand-centered">
          <ul class="nav navbar-nav">
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= fa_icon "inr 2x", class: 'fa-red'%> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
              <li class="dropdown-header">Fellowships</li>
              <li><a>Put fellowships here</a></li>
              </ul>
              </li>
            <li><a href="#"><%= fa_icon "users 2x", class: 'fa-red'%></a></li>
             <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= fa_icon "tags 2x", class: 'fa-red'%> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
              <li class="dropdown-header">Your Tags</li>
              <% tag_cloud Artifact.tag_counts, %w[s m l] do |tag, css_class| %>
    <li><%= link_to tag.name, tag_path(tag.name), class: css_class %></li>
  <% end %>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "#", class: 'login-text', :'data-toggle' => 'modal', :'data-target' => '#newArtifact' do%>
            <%= fa_icon "plus 2x", class: 'fa-red' %>
            <% end %>
            </li>
          </ul>
           <ul class="nav navbar-nav navbar-right">
                    <li><a href="#search"><%= fa_icon "search 2x", class: 'fa-red'%></a></li>
                </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div id="search">
    <button type="button" class="close">×</button>
        <%= form_tag(artifacts_path, method: :get) do |f| %>

      <%= search_field_tag :search, params[:search], placeholder: "What would you like to find?", id: nil %>
      <%= button_tag "Search", name: nil, class: 'btn btn-primary' %>

    <% end %>

</div>

