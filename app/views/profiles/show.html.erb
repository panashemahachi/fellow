<div class="col-md-3">
<!-- GBTT clean this up !!! -->
<% if @user.profile_pic.url == '/profile_pics/original/missing.png' %>

<%= image_tag(@user.default_pic, class: 'img-responsive profile-pic') %>
<% else %>

<%= image_tag(@user.profile_pic.url, class: 'img-responsive profile-pic') %>

<% end %>
</div>

<div class="col-md-9">
<h2><%= @user.username %></h2>

<% if @user.id == current_user.id %>
<%= link_to "Edit Your Profile", edit_user_registration_path%>

<% end %>
</div>